<h1>Usuario registrado</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Ingresar" %>
  </div>
<% end %>

<p>Usuario nuevo? <%= link_to "Registrate ahora!", signup_path %></p>
