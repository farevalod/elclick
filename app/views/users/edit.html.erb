<h1>Editar usario</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
<div class="clearfix">
<div class="input">
    <%= f.label :nombre %>
    <%= f.text_field :name %>
  </div>
  </div>
<div class="clearfix">
  <div class="input">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  </div>
<div class="clearfix">
  <div class="input">
    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password %>
  </div>
  </div>
<div class="clearfix">
  <div class="input">
    <%= f.label :password_confirmation, "Confirmar contraseña" %>
    <%= f.password_field :password_confirmation %>
  </div>
  </div>
<div class="clearfix">
  <div class="actions">
    <%= f.submit "Actualizar", :class => "btn large primary" %>
  </div>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">cambiar</a>
</div>
