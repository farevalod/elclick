<h1>Editar usario</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="input">
    <%= f.label :nombre %><br />
    <%= f.text_field :name %>
  </div>
  <div class="input">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="input">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="input">
    <%= f.label :password_confirmation, "Confirmacion" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Actualizar", :class => "btn large primary" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">cambiar</a>
</div>
