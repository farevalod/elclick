<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>
<fieldset>
<legend>Nuevo Usuario</legend>
  <div class="input">
    <%= f.label :nombre %><br />
    <%= f.text_field :name %>
  </div>
  <div class="input">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="input">
    <%= f.label "Contraseña" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="input">
    <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" , :class => "btn large primary" %>
  </div>
<% end %>
